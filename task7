mysql> CREATE VIEW doctor_schedule AS
    -> SELECT
    ->     d.doctor_id,
    ->     d.name AS doctor_name,
    ->     a.appointment_date,
    ->     p.name AS patient_name,
    ->     a.reason,
    ->     a.status
    -> FROM doctors d
    -> JOIN appointments a ON d.doctor_id = a.doctor_id
    -> JOIN patients p ON a.patient_id = p.patient_id
    -> ORDER BY a.appointment_date;
Query OK, 0 rows affected (0.02 sec)

mysql> CREATE VIEW billing_summary AS
    -> SELECT
    ->     p.patient_id,
    ->     p.name AS patient_name,
    ->     b.amount,
    ->     b.billing_date,
    ->     b.status
    -> FROM patients p
    -> JOIN bills b ON p.patient_id = b.patient_id;
Query OK, 0 rows affected (0.02 sec)

mysql> SELECT * FROM doctor_schedule WHERE doctor_id = 101;
